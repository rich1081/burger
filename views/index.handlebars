<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
  	<img src="/assets/images/burger.png" class="text-center" alt="burger" />
    <h1 class="display-3">Burger Time</h1>
    <p class="lead">Create your own Burger and devour it. See what happens.</p>
  </div>
</div>

<!-- create submit button -->

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter a burger and click the "Submit" button.</p>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
	 	 <div class="col float-left">
	 		 {{#each burger_data}}
			 {{#unless devoured}}

	 		 <ul>
		
		 	 {{this.burger_name}}
		 	<button type="submit" class="btn btn-default">Devour it!</button>
			</ul>
			{{/unless}}
		 	{{/each}}

		 	 <div class="col float-right">
	 		 {{#each burger_data}}
			 {{#if this.devoured}}

	 		 <ul>
		
		 	 {{this.burger_name}}
			</ul>
			{{/if}}
		 	{{/each}}
		 </div>
		</div>
	</div>
</div>




